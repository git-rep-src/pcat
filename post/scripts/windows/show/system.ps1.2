$ProgressPreference = "SilentlyContinue"
$OuputEncoding = [Text.UTF8Encoding]::UTF8
$global:BUF = ""
$RET = ""
$PSV = ([int]$PsVersionTable.PsVersion.Major) 
function xml()
{
    if ($args[0] -eq "OPEN") {
        $global:BUF += "<" + $args[1] + ">"
    } elseif ($args[0] -eq "CLOSE") {
        $global:BUF += "</" + $args[1] + ">"
    } else {
        $global:BUF += "<" + $args[0] + ">" + $args[1] + "</" + $args[0] + ">"
    }
}
if ($PSV -ne "" -and $PSV -ne $null -and $PSV -gt 2 -and $? -eq "True") {
    xml "OPEN" "DEV"
    $RET = (Get-CimInstance Win32_Product | Format-Table -Hidetableheaders -Property Name | Out-String)
    if ($RET -ne "" -and $RET -ne $null -and $? -eq "True") {
        if ($RET -like "*Visual*") {
            xml "VISUAL" "Yes"
        } else {
            xml "VISUAL" "No"
        }
        if ($RET -like "*.NET*") {
            xml "NET" "Yes"
        } else {
            xml "NET" "No"
        }
    } else {
        xml "VISUAL" "No"
        xml "NET" "No"
    }
    xml "CLOSE" "DEV"
} else {
    xml "OPEN" "NULL"
    xml "NONE" "Powershell is not installed or version is not compatible"
    xml "CLOSE" "NULL"
}
xml "CLOSE" "DATA"
echo "$BUF [POST-EOS]"
